{
  "name": "progressively",
  "version": "1.2.5",
  "description": "A JavaScript library to load images progressively",
  "main": "dist/progressively.min.js",
  "scripts": {
    "lint": "standard \"src/**/*.js\"",
    "build:css": "postcss src/*.css --no-map -u cssnano -u autoprefixer -o dist/progressively.min.css",
    "build:js": "webpack -p",
    "prepublish": "npm run lint && npm run build:css && npm run build:js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thinker3197/progressively.git"
  },
  "keywords": [
    "progressive",
    "lazy-load",
    "images"
  ],
  "author": "Ashish",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thinker3197/progressively/issues"
  },
  "homepage": "https://github.com/thinker3197/progressively/blob/master/README.md",
  "devDependencies": {
    "autoprefixer": "^8.6.2",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "cssnano": "^4.0.0-rc.2",
    "eslint": "^4.19.1",
    "postcss-cli": "^5.0.0",
    "standard": "^8.6.0",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.3"
  },
  "typings": "src/progressively.d.ts",
  "browserslist": [
    "IE 9"
  ],
  "babel": {
    "presets": [
      "env"
    ]
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": "es6",
      "sourceType": "module"
    },
    "env": {
      "browser": true
    },
    "rules": {
      "no-var": 2,
      "prefer-const": 1
    }
  },
  "eslintIgnore": [
    "build/*",
    "dist/*",
    "webpack.*"
  ],
  "standard": {
    "globals": [
      "define",
      "Image"
    ]
  }
}
